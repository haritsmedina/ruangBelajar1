<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Task Students</title>
</head>
<body>


    <h1><%=taskList.category%></h1>


    <form method="POST">

        <label for="">Assign Students:</label><br>
        <br>
        <select name="UserId"><br>
            <% data.forEach((element) => { %>
            <option value=<%= element.id%>><%= element.combineName() %></option>
            <%  }) %>
        </select><br>
        <br>
        <input type="submit" value="submit"><br>
        <br>
        <input type="reset" value="cancel"><br>
    </form>

    <h2>List Assignment</h2>
    <table border="1">
        <thead>
            <th>Students</th>
            <th>Status</th>
        </thead>
        <% taskList.Users.forEach((element) => { %>
            <tr>
                <td><%= element.firstName%> <%= element.lastName%></td>
                <td><%= element.Homework.status%></td>
            </tr>
        <%  }) %>
    </table>


</body>
</html>